{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "db:check": "npm run --prefix packages/database db:check",
    "db:generate": "npm run --prefix packages/database db:generate",
    "db:migrate": "npm run --prefix packages/database db:migrate",
    "db:push": "npm run --prefix packages/database db:push",
    "db:studio": "npm run --prefix packages/database db:studio"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.6.2",
    "turbo": "^2.5.5",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
